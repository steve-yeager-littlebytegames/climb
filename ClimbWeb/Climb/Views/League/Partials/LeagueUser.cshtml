@using Climb.Extensions
@model Climb.ViewModels.Leagues.LeagueUserViewModel

<div class="seasonparticipant-container d-flex filterable" data-filter-keys="@Html.FilterKeys(Model.LeagueUser.DisplayName, Model.LeagueUser.League.Name)">
    <img src="@Model.Picture" width="64" height="64"/>
    <div class="d-flex flex-grow-1 justify-content-start">
        <div class="d-flex flex-column w-50">
            <b class="p-1 d-flex justify-content-start">
                <a href="@Model.TitleLink">@Model.Title</a>
            </b>
            <div class="d-flex">
                @foreach (var character in Model.Characters)
                {
                    <img src="@character" width="20" height="20"/>
                }
                @for (var i = 0; i < Model.EmptyCharacterCount; i++)
                {
                    <div style="height: 20px; width: 20px;"></div>
                }
            </div>
        </div>
        <div class="points-text-small d-flex align-items-center">( @Model.LeagueUser.Points )</div>
        <div class="d-flex flex-grow-1 justify-content-around align-items-center" style="width: 37px;">
            <div>
                <i class="fas @Model.RankTrendClass rank-trend"></i>
            </div>
            <div class="d-flex justify-content-end rank-text-small text-center">
                @*<span class="hidden">@Model.RankWhiteSpace</span>*@
                @Model.LeagueUser.Rank
            </div>
        </div>
    </div>
</div>