@model Climb.ViewModels.Seasons.SeasonParticipantViewModel

<link rel="stylesheet" href="~/dist/styles/league/leagueuser.css" />

<div class="seasonparticipant-container d-flex filterable" data-filter-keys="@Model.Participant.LeagueUser.DisplayName">
    <img class="profile-pic" src="@Model.ProfilePic" width="64" height="64"/>
    <div class="d-flex flex-column flex-grow-1 justify-content-center text-center">
        <b class="name p-1"><a asp-controller="User" asp-action="Home" asp-route-userid="@Model.Participant.UserID">@Model.Participant.LeagueUser.DisplayName</a></b>
        <div class="d-flex flex-grow-1 justify-content-around align-content-center">
            <div class="d-flex">
                @foreach (var character in Model.Characters)
                {
                    <img src="@character" width="20" height="20" />
                }
                @for (int i = 0; i < Model.EmptyCharacterCount; i++)
                {
                    <div style="width: 20px; height: 20px;"></div>
                }
            </div>
            <div class="points-text-small">@($"({Model.Participant.Points}.{Model.Participant.TieBreakerPoints})")</div>
            @*<div>
                <img src="https://cdn4.iconfinder.com/data/icons/defaulticon/icons/png/256x256/arrow-alt-up.png" width="20" height="20" style="opacity: 0.5;"/>
            </div>*@
            <div class="rank-text-small">@Model.Participant.Standing</div>
        </div>
    </div>
</div>