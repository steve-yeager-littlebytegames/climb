@using Climb.Services
@model Climb.ViewModels.Seasons.DataViewModel
@inject ICdnService cdnService

@{
    ViewBag.Title = "Leagues-Home";
    Layout = "_SeasonsLayout";
}

@section SeasonsBody
{
    <div class="d-flex flex-column justify-content-center align-items-center body-temp">
        <div>
            <span>Completed Sets</span>
            <span>@Model.CompletedSets</span>
        </div>
        <div>
            <span>Overdue Sets</span>
            <span>@Model.OverdueSets</span>
        </div>
        <div>
            <span>Remaining Sets</span>
            <span>@Model.RemainingSets</span>
        </div>
        <div>
            <span>Completed Percent</span>
            <span>@Model.CompletePercent.ToString("P0")</span>
        </div>
        <div>
            <span>Target Percent</span>
            <span>@Model.TargetPercent.ToString("P0")</span>
        </div>
    </div>
}