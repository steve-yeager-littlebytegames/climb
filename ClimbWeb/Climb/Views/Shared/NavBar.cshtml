@model Climb.ViewModels.BaseViewModel

<nav class="navbar nav fixed-top navbar-expand-md navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand brand" asp-controller="Site" asp-action="Home">Climb</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                @if (Model.User == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="LogIn">Log In</a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                }
                else
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Leagues
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @foreach (var league in Model.UserActiveLeagues)
                            {
                                <a class="dropdown-item text-light" asp-controller="League" asp-action="Home" asp-route-leagueID="@league.ID">@league.Name</a>
                            }
                            @if (Model.UserActiveLeagues.Count > 0)
                            {
                                <div class="dropdown-divider"></div>
                            }
                            <a class="btn btn-primary" asp-controller="League" asp-action="Index">Search</a>
                        </div>
                    </li>

                    if (Model.UserActiveSeasons.Count > 0)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Seasons
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @foreach (var season in Model.UserActiveSeasons)
                                {
                                    <a class="dropdown-item text-light" asp-controller="Season" asp-action="Home" asp-route-seasonID="@season.ID">@season.League.Name @(season.Index + 1)</a>
                                }
                            </div>
                        </li>
                    }

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @Model.User.UserName
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="User" asp-action="Home" asp-route-userID="">Home</a>
                            <a class="dropdown-item text-light" asp-controller="User" asp-action="Home">Home</a>
                            <a class="dropdown-item text-light" asp-controller="Account" asp-action="Settings">Settings</a>
                            <form asp-controller="Account" asp-action="LogOut">
                                <button type="button" class="btn btn-secondary">Log Out</button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

