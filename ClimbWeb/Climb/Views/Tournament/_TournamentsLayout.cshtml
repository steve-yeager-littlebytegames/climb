@using Climb.ViewModels.Tournaments
@model Climb.ViewModels.Tournaments.PageViewModel

@{
    Layout = "_LayoutWithNavbar";
}

<div class="container">
    <div id="home-header" class="d-flex flex-column justify-content-center mt-4">
        <h1>Tournament @Model.Name</h1>
    </div>

    <div class="home-menu d-flex justify-content-between">
        <a class="@(Model.IsSubPageActive<HomeViewModel>() ? "active" : "")" asp-action="Home" asp-route-id="@Model.Tournament.ID">Home</a>
        <a class="@(Model.IsSubPageActive<CompetitorsViewModel>() ? "active" : "")" asp-action="Competitors" asp-route-id="@Model.Tournament.ID">Competitors</a>
    </div>

    @RenderSection("TournamentsBody")
</div>

@section scripts
{
    @RenderSection("Scripts", false)
}