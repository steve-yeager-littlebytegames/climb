@model Climb.ViewModels.RequestViewModel<Climb.Requests.Account.RegisterRequest>

@{
    ViewBag.Title = "Account-Register";
}

<div class="container mt-4">
    <form class="form" asp-action="RegisterPost" method="post">
        <img class="mb-4" src="~/images/logo/logo-128x128.png" width="128" height="128">
        <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
        <div class="form-group row">
            <label class="col-md-3 col-form-label text-left">Email</label>
            <input asp-for="Request.Email" class="form-control col-md-9" placeholder="Email Address" autofocus>
            <span asp-validation-for="Request.Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-md-3 col-form-label text-left">Name</label>
            <input asp-for="Request.Name" class="form-control col-md-9" placeholder="Name" autofocus>
            <span asp-validation-for="Request.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-md-3 col-form-label text-left">Username</label>
            <input asp-for="Request.Username" class="form-control col-md-9" placeholder="Username" autofocus>
            <span asp-validation-for="Request.Username" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-md-3 col-form-label text-left">Password</label>
            <input asp-for="Request.Password" class="form-control col-md-9" placeholder="Password" autofocus>
            <span asp-validation-for="Request.Password" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-3"></div> @*empty div to align confirm password*@
            <input asp-for="Request.ConfirmPassword" class="form-control col-md-9" placeholder="Confirm Password" autofocus>
            <span asp-validation-for="Request.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label class="form-check-label">
                <input asp-for="Request.RememberMe" />
                <span>Remember Me</span>
            </label>
        </div>
        <div class="d-flex flex-column align-items-center">
            <button class="btn btn-set btn-lg btn-edit btn-block my-4 mx-auto" type="submit">Register</button>
            <a asp-action="LogIn">Log In</a>
        </div>
    </form>
</div>