@model Climb.ViewModels.Account.SettingsViewModel

@{
    ViewBag.Title = "Account-Settings";
}

<div class="container">
    <h3 class="py-4">@Model.User.UserName Settings</h3>
    <form asp-action="UpdateSettings" method="post" enctype="multipart/form-data">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="inputName">Name</label>
            <div class="col-sm-8">
                <input type="text" id="inputName" name="Name" class="form-control" value="@Model.User.Name" autofocus>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="inputUsername">Username</label>
            <div class="col-sm-8">
                <input type="text" id="inputUsername" name="Username" class="form-control" value="@Model.User.UserName" required autofocus>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <img src="@Model.ProfilePic" />
            </div>
            <div class="col-sm-8">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputProfilePic" name="ProfilePic" accept="image/*" autofocus>
                    <label class="custom-file-label" for="inputProfilePic">Choose Image</label>
                </div>
            </div>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Save Changes</button>
    </form>
</div>