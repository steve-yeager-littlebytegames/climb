@model Climb.ViewModels.BaseViewModel

@{
    ViewBag.Title = "Reset Password";
}

<div class="container mt-4">
    <form class="form" asp-action="ResetPasswordPost">
        <img class="mb-4" src="~/images/logo/logo-128x128.png" alt="" width="128" height="128">
        <h1 class="h3 mb-3 font-weight-normal">Reset Password</h1>
        <input class="form-control" type="hidden" name="userID" value="@ViewData["User"]" />
        <input class="form-control" type="hidden" name="code" value="@ViewData["Code"]" />
        <div class="form-group row">
            <label for="password" class="col-md-3 col-form-label text-left">New Password</label>
            <input class="form-control col-md-9" type="password" name="password" placeholder="Password" />
        </div>
        <div class="form-group row">
            <div class="col-md-3"></div> @*empty div to align confirm password*@
            <input class="form-control col-md-9" type="password" name="confirm" placeholder="Confirm Password" />
        </div>
        <button class="btn btn-primary">Reset</button>
    </form>
</div>