@model Climb.ViewModels.Account.LogInViewModel

@{
    ViewBag.Title = "Log In";
}

<div class="container mt-4">
    <form class="form" asp-action="LogInPost" method="post">
        <input asp-for="Request.ReturnUrl" value="@Model.ReturnUrl"/>
        <img class="mb-4" src="~/images/logo/logo-128x128.png" alt="" width="128" height="128">
        <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
        @if(ViewData.ContainsKey("LoginFail"))
        {
            <span>Failed to Log In</span>
        }
        <div class="form-group row">
            <label for="inputEmail" class="col-md-3 col-form-label text-left">Email</label>
            <input id="inputEmail" asp-for="Request.Email" class="form-control col-md-9" placeholder="djfalcon@fzero.com" required autofocus>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-md-3 col-form-label text-left">Password</label>
            <input id="inputPassword" asp-for="Request.Password" class="form-control col-md-9" placeholder="hyeesssss_123" required>
        </div>
        <div class="checkbox mb-3">
            <label>
                @Html.CheckBox("RememberMe")
                <span>Remember Me</span>
            </label>
        </div>
        <div class="d-flex flex-column align-items-center">
            <button class="btn btn-cstm-primary my-4 mx-auto" type="submit">Log In</button>
            <a class="btn btn-cstm-secondary" role="button" asp-action="Register">Register</a>
            <a class="mt-4" asp-action="ForgotPassword">Forgot Password</a>
        </div>
    </form>
</div>